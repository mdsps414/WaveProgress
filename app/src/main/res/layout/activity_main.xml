<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.mdsps.views.waveprogressview.test.MainActivity">

    <ru.mdsps.views.waveprogressview.WaveProgressView
        android:id="@+id/wave.progress1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        app:wpv_type="rectangle"
        app:wpv_border_width="4dp"
        app:wpv_border_color="@color/colorPrimary"
        app:wpv_top_left_corner_radius="30dp"
        app:wpv_bottom_right_corner_radius="30dp"
        app:wpv_wave_color="@color/colorAccent"
        app:wpv_wave_height="large"
        app:wpv_wave_length="large"
        app:wpv_progress="65"/>

    <ru.mdsps.views.waveprogressview.WaveProgressView
        android:id="@+id/wave.progress2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/wave.progress1"
        android:background="@mipmap/image"
        app:wpv_type="oval"
        app:wpv_border_width="4dp"
        app:wpv_border_color="@color/colorPrimary"
        app:wpv_top_left_corner_radius="30dp"
        app:wpv_bottom_right_corner_radius="30dp"
        app:wpv_wave_color="@color/colorProgress2"
        app:wpv_wave_height="large"
        app:wpv_wave_length="large"
        app:wpv_progress="55"/>

    <ru.mdsps.views.waveprogressview.WaveProgressView
        android:id="@+id/wave.progress3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@+id/wave.progress1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:wpv_type="circle"
        app:wpv_border_width="4dp"
        app:wpv_border_color="@color/colorPrimary"
        app:wpv_top_left_corner_radius="30dp"
        app:wpv_bottom_right_corner_radius="30dp"
        app:wpv_wave_color="@color/colorProgress3"
        app:wpv_wave_height="large"
        app:wpv_wave_length="large"
        app:wpv_progress="55"/>

    <ru.mdsps.views.waveprogressview.WaveProgressView
        android:id="@+id/wave.progress4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@+id/wave.progress2"
        android:layout_toRightOf="@+id/wave.progress3"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:wpv_type="square"
        app:wpv_border_width="4dp"
        app:wpv_border_color="@color/colorPrimary"
        app:wpv_top_right_corner_radius="30dp"
        app:wpv_bottom_left_corner_radius="30dp"
        app:wpv_wave_color="@color/colorProgress4"
        app:wpv_wave_height="large"
        app:wpv_wave_length="large"
        app:wpv_progress="35"/>

</RelativeLayout>
